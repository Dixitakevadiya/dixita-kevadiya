<div class="banner_wrapper">
    <div class="container">
        <div class="banner_content">
            {% if section.settings.title != blank %}
            <h2 class="title">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.desc != blank %}
            <p class="description">
                {{ section.settings.desc }}
            </p>
            <a href="{{ section.settings.btn_url | default: '#' }}">{{ section.settings.btn_text }}</a>
            {% endif %}
        </div>
        <div class="banner_img">
            <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="{{ product.title }}">
        </div>
    </div>
</div>

{% schema %}
{
    "name": "New Banner",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "desc",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button URL"
        }
    ],
    "presets": [
        {
         "name": "New Banner"
        }
    ]
}
{% endschema %}
