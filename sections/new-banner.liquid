<div class="banner_wrapper">
    <div class="container"> 
        {% if section.settings.img != blank %}
        <div class="banner_img">
            <img src="{{ section.settings.img | img_url: 'master' }}" alt="{{ section.settings.img.alt }}" class="desktop_only">
            {% if section.settings.mob_img != blank %}
            <img src="{{ section.settings.mob_img | img_url: 'master' }}" alt="{{ section.settings.mob_img.alt }}" class="mob_only">
            {% endif %}
        </div>
        {% endif %}
        <div class="banner_content">
            {% if section.settings.title != blank %}      
            <h2 class="title">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.desc != blank %}
            <p class="description"> 
                {{ section.settings.desc }}           
            </p>
            <a href="{{ section.settings.btn_url | default: '#' }}" class="shop_btn">{{ section.settings.btn_text }} 
                <img src="https://cdn.shopify.com/s/files/1/0694/0341/0476/files/arrow.png?v=1755533411" alt="arrow">
            </a>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "New Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "img",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "mob_img",
            "label": " Mobile Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "desc",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button URL"
        }
    ],
    "presets": [
        {
         "name": "New Banner"
        }
    ]
}
{% endschema %}
